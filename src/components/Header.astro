---
import Menu from "../components/Menu.astro";

---

<header
    class="z-[1000] bg-[#F3F5F6]/50 fixed top-0 text-white-950 h-[90px] md:h-[90px] w-full flex items-center justify-between"
>
    <div
        class="flex pl-5 lg:min-w-[190px] items-center justify-center w-fit text-center h-full lg:w-[200px]"
    >
        <Menu />
        <div
            class="hidden hover:decoration-[#377DEC] lg:block text-xl text-start w-full font-sans"
        >
            <a
                href="/"
                class="scale-90 duration-200 hover:scale-110 hover:cursor-pointer flex w-full"
            >
                <img src="/logo.avif" class="w-[70px]" alt="" />
               
            </a>
        </div>
    </div>
    <div class="flex w-full h-full justify-center items-center">
        
        <div class="flex md:hidden">
            <div
                class="hover:decoration-[#377DEC] text-xl text-start w-full font-sans"
            >
                <a
                    href="/"
                    class="scale-90 duration-200 hover:scale-110 hover:cursor-pointer flex w-full"
                >
                    <img src="/logo.avif" class="w-[90px]" alt="" />
                </a>
            </div>
        </div>
    </div>
    <div class="flex pr-5 items-center justify-around text-center h-full">
        <a
            href="https://wa.me/542226532910?text=Quiero%20reservar%20un%20turno%20en%20la%20fecha%20y%20hora%20m%C3%A1s%20temprana"
            target="_blank"
            class="hover:scale-110 bg-[#fff] transition-all duration-200 ease-in-out scale-90 shadow-lg font-normal h-10 w-10 items-center justify-center align-center rounded-full outline-none focus:outline-none mr-2 hover:cursor-pointer"
            type="button"
        >
            <div class="w-full h-full flex items-center justify-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#06D570"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"
                    ></path><path
                        d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
                    ></path></svg
                >
            </div>
        </a>
        <a
            href="https://www.instagram.com/kmz.barberia?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="
            target="_blank"
            class="hover:scale-110 bg-[#fff] transition-all duration-200 ease-in-out scale-90 shadow-lg font-normal h-10 w-10 items-center justify-center rounded-full outline-none focus:outline-none mr-2"
            type="button"
        >
            <div class="w-full h-full flex items-center justify-center">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="#C72785"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram"
                    ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                    ></path><path
                        d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z"
                    ></path><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"
