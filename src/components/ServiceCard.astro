---
interface Props {
  id: string;
  name: string;
  price: number;
  duration: string;
  description?: string;
}

const { id, name, price, duration, description } = Astro.props;
---

<div
  class="service-card group cursor-pointer rounded-xl shadow-md p-5 bg-gradient-to-br from-gray-50 to-gray-100
         border-2 border-transparent
         flex flex-col transition-all duration-300 ease-out
         hover:scale-[1.03] hover:shadow-xl hover:border-gray-400
         data-[selected=true]:border-gray-800 data-[selected=true]:bg-gradient-to-br data-[selected=true]:from-gray-200 data-[selected=true]:to-gray-300"
  data-service-id={id}
  data-service-name={name}
  data-service-price={price}
  data-service-duration={duration}
>
  <div class="flex justify-between items-start mb-2">
    <h3 class="text-lg font-semibold text-gray-800 group-hover:text-gray-900 transition-colors">
      {name}
    </h3>
    <div class="flex items-center justify-center w-6 h-6 rounded-full border-2 border-gray-300 group-hover:border-gray-500 transition-colors
                group-data-[selected=true]:bg-gray-800 group-data-[selected=true]:border-gray-800">
      <svg class="w-4 h-4 text-white opacity-0 group-data-[selected=true]:opacity-100 transition-opacity" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
      </svg>
    </div>
  </div>

  {description && (
    <p class="text-sm text-gray-600 mb-3">{description}</p>
  )}

  <div class="mt-auto flex justify-between items-end">
    <span class="text-2xl font-bold text-gray-900">
      ${price.toLocaleString('es-AR')}
    </span>
    <span class="text-sm text-gray-500 flex items-center gap-1">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      {duration}
    </span>
  </div>
</div>
